<html class="showrecipeshtml">
<body class="showrecipesbody">
<div class="showrecipes">
<h2>Drink Name:</h2>
<h3><%= @results['strDrink'] %></h3><br><br>
<h2>Drink Recipe:</h2>
     <p><%= @results["strInstructions"] %></p>
     <ul>
     <% 15.times do |i| 
     break unless @results["strIngredient#{i+1}"].length > 1%>
     <li><%= @results["strIngredient#{i+1}"] %> - <%= @results["strMeasure#{i+1}"]%></li>
     <% end %>
     </ul>
 </div>
 </body>
 </html>