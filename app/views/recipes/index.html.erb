<body class="recp"
<p id="notice"><%= notice %></p>

<div class="recipe">
<div class="recp-title">
<h1>Recipes</h1>
</div>
<table>
  <thead>
    <tr>
      <th>Drink Name</th>
      <th>Drink Ingredients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.body %></td>
        <td> <%= image_tag recipe.photo.url(:thumb) %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
</div>
</body>